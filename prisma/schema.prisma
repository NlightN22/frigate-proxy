// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Camera {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  name String
  url String?
  frigateHost FrigateHost? @relation(fields: [frigateHostId], references: [id])
  frigateHostId String? @db.ObjectId
  roles Roles [] @relation(fields: [rolesIDs], references: [id])
  rolesIDs String[]
}

model FrigateHost {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  name String
  host String @unique
  cameras Camera[]
}

model Roles {
  id String @id @map("_id")
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  name String @unique
  cameras Camera[] @relation(fields: [cameraIDs], references: [id])
  cameraIDs String[] @db.ObjectId
}